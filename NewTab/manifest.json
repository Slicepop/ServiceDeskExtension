{
  "manifest_version": 3,
  "name": "Service Desk Upgrade",
  "version": "2.5.0",
  "permissions": ["activeTab", "offscreen"],

  "action": {
    "default_icon": "favicon.png",
    "resources": ["sun-solid.svg", "moon-solid.svg"],
    "default_popup": "popup.html",
    "css": ["./styles.css"]
  },

  "host_permissions": ["https://support.wmed.edu/*"],
  "web_accessible_resources": [
    {
      "resources": [
        "saveClose.png",
        "popup.js",
        "favicon.ico",
        "request.ico",
        "open.png"
      ],
      "matches": ["https://support.wmed.edu/*"]
    }
  ],
  "content_scripts": [
    {
      "matches": ["https://support.wmed.edu/LiveTime/WebObjects/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ]
}
